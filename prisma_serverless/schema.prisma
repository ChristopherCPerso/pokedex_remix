// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model adonis_schema {
  id             Int       @id @default(autoincrement()) 
  name           String    
  batch          Int
  migration_time DateTime? @default(now()) 
}

model adonis_schema_versions {
  version Int @id 
}

model articles {
  id            Int       @id @default(autoincrement()) 
  date          DateTime? 
  title         String   
  content       String    
  image_article String    
  userId        Int?      
  created_at    DateTime? 
  updated_at    DateTime? 
  users         users?    @relation(fields: [userId], references: [id])

  @@index([userId], map: "articles_userid_foreign")
}

model user_favorites {
  id         Int       @id @default(autoincrement()) 
  pokemon_id Int
  user_id    Int?      
  created_at DateTime? 
  updated_at DateTime? 
  users      users?    @relation(fields: [user_id], references: [id])

  @@index([user_id], map: "user_favorites_user_id_foreign")
}

model users {
  id             Int              @id @default(autoincrement()) 
  username       String           @unique(map: "users_username_unique")
  email          String           @unique(map: "users_email_unique") 
  password       String           
  profil_picture String?          
  is_admin       Boolean?         @default(false)
  is_active      Boolean?         @default(false)
  created_at     DateTime?        
  updated_at     DateTime?        
  articles       articles[]
  user_favorites user_favorites[]
}
